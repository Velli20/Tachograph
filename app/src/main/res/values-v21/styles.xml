<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="ActivityAddNewEventTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        
    </style>

    <style name="TranslucentActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    
    <style name="ListItemWorkLimit">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
    </style>
    
    <style name="ExceptionCounter">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center_vertical|right|end</item>
        <item name="android:background">@drawable/overflow_ripple_background</item>
    </style>
    
    <style name="EventDetailsActionButton">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">@dimen/toolbar_title_fab_margin</item>
    </style>
    
    <style name="EventFab">
        <item name="android:layout_gravity">bottom|right|end</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:clickable">false</item>
    </style>
    
    <style name="EventFabMini" parent="@style/EventFab">
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:scaleX">0</item>
        <item name="android:scaleY">0</item>
    </style>
    
    <style name="RippleButtonBackground" >
        <item name="android:background">@drawable/overflow_ripple_background</item>
    </style>

</resources>
