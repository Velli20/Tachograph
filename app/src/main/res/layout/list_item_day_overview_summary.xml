<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="15dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:id="@+id/working_days_daily_drive_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal" >

            <com.velli.tachograph.views.RobotoLightTextView
                android:id="@+id/working_days_daily_drive_time_title"
                style="@style/DayOverviewText"
                custom:style="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/event_driving_dark"
                android:drawableStart="@drawable/event_driving_dark"
                android:text="@string/working_days_daily_drive_time" />

            <com.velli.tachograph.views.RobotoLightTextView
                android:id="@+id/working_days_daily_drive_time"
                style="@style/ListPrimaryText"
                custom:style="medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|end" 
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/working_days_wtd_daily_work"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal" >

            <com.velli.tachograph.views.RobotoLightTextView
                android:id="@+id/working_days_wtd_daily_work_title"
                style="@style/DayOverviewText"
                custom:style="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/event_other_dark"
                android:drawableStart="@drawable/event_other_dark"
                android:text="@string/working_days_daily_wtd_work_time" />

            <com.velli.tachograph.views.RobotoLightTextView
                android:id="@+id/working_days_wtd_daily_work_time"
                style="@style/ListPrimaryText"
                custom:style="medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|end" 
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/working_days_daily_work_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal" >

            <com.velli.tachograph.views.RobotoLightTextView
                android:id="@+id/working_days_daily_work_time_title"
                style="@style/DayOverviewText"
                custom:style="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/event_other_dark"
                android:drawableStart="@drawable/event_other_dark"
                android:text="@string/working_days_daily_work_time" />

            <com.velli.tachograph.views.RobotoLightTextView
                android:id="@+id/working_days_daily_work_time"
                style="@style/ListPrimaryText"
                custom:style="medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|end" 
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/working_days_daily_rest_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal" >

            <com.velli.tachograph.views.RobotoLightTextView
                android:id="@+id/working_days_daily_rest_time_title"
                style="@style/DayOverviewText"
                custom:style="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/event_daily_rest_dark"
                android:drawableStart="@drawable/event_daily_rest_dark"
                android:text="@string/working_days_daily_rest_time" />

            <com.velli.tachograph.views.RobotoLightTextView
                android:id="@+id/working_days_daily_rest_time"
                style="@style/ListPrimaryText"
                custom:style="medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|end" 
                android:textSize="14sp"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/working_days_driven_distance_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal" >

            <com.velli.tachograph.views.RobotoLightTextView
                android:id="@+id/working_days_daily_driven_distance_title"
                style="@style/DayOverviewText"
                custom:style="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="56dp"
                android:layout_marginStart="56dp"
                android:text="@string/working_days_total_driven_distance" />

            <com.velli.tachograph.views.RobotoLightTextView
                android:id="@+id/working_days_daily_driven_distance"
                style="@style/ListPrimaryText"
                custom:style="medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|end" 
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View 
        style="@style/Divider"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"/>
    


</FrameLayout>