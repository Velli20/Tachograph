<com.velli20.tachograph.views.ChooseValueView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:ignore="UnusedAttribute"
    android:windowMinWidthMajor="@android:dimen/dialog_min_width_major" >

    <TextView
        android:id="@+id/choose_value_dialog_current_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@+id/choose_value_dialog_button_erase"
        android:layout_toLeftOf="@+id/choose_value_dialog_button_erase"
        android:fontFamily="sans-serif-light"
        android:textSize="26sp"
        android:textColor="@color/black"
        tools:ignore="UnusedAttribute" />

    <View
        android:id="@+id/choose_value_dialog_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/choose_value_dialog_current_value"
        android:background="@color/black" />
    
    
        

    

    <ImageButton
        android:id="@+id/choose_value_dialog_button_erase"
        style="@style/RippleButtonBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/choose_value_dialog_separator"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
    
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_backspace_normal_light" />

    <LinearLayout
        android:id="@+id/choose_value_dialog_keypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_value_dialog_separator"
        android:orientation="vertical">
        
        <include layout="@layout/choose_value_dialog_keypad"/>
    </LinearLayout>

    
    

</com.velli20.tachograph.views.ChooseValueView>