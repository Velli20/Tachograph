<com.velli20.tachograph.views.ListItemRegulation xmlns:android="http://schemas.android.com/apk/res/android"
style="@style/ListItemWorkLimit"
xmlns:custom="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:card="http://schemas.android.com/apk/res-auto"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
tools:ignore="RtlHardcoded"
card:cardUseCompatPadding="false"
card:cardCornerRadius="2dp"
card:cardElevation="@dimen/card_elevation" >

<com.velli20.tachograph.views.ExceptionTile
    android:id="@+id/work_limit_exception_tile"
    style="@style/ExceptionCounter"
    android:layout_width="52dp"
    android:layout_height="52dp"
    android:layout_gravity="top|right|end"
    android:clickable="false"
    android:alpha="0.54" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical" >

    <com.velli20.tachograph.views.RobotoLightTextView
        android:id="@+id/text_work_limit_title"
        custom:style="regular"
        style="@style/ListItemRegulationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start|left"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp" />

    <com.velli20.tachograph.views.ActivityProgressPieChart
        android:id="@+id/work_limit_chartView_big"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:layout_gravity="center" />

    <com.velli20.tachograph.views.ActivityProgressBar
        android:id="@+id/work_limit_chartView_small"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_gravity="center" />

</LinearLayout>

</com.velli20.tachograph.views.ListItemRegulation>
