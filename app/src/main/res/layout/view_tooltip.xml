<com.velli20.tachograph.views.TooltipView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom">


    <ImageView
        android:id="@+id/tooltip_arrow_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:contentDescription="@null"
        android:src="@drawable/tooltip_view_arrow_up" />

    <LinearLayout
        android:id="@+id/tooltip_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end|bottom"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/tooltip_view_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="6.0dip"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:paddingTop="6.0dip">

        <TextView
            android:id="@+id/tooltip_title"
            style="@style/TooltipSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-3.0dip"
            android:textIsSelectable="false"
            android:textSize="14.0sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/tooltip_text"
            style="@style/TooltipSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="false"
            android:textSize="12.0sp"
            android:textStyle="italic" />
    </LinearLayout>

    <ImageView
        android:id="@+id/tooltip_arrow_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:contentDescription="@null"
        android:src="@drawable/tooltip_view_arrow_down" />
</com.velli20.tachograph.views.TooltipView>