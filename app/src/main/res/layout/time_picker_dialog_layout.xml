<com.velli.tachograph.views.TimePickerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/time_picker_number_conatainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" 
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp" >

        <com.velli.tachograph.views.RobotoLightTextView
            custom:style="regular"
            android:id="@+id/time_picker_hour_tens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TimePickerTimeText"
            android:singleLine="true"
            android:ellipsize="none"
            android:textColor="@color/black"/>
        
        <com.velli.tachograph.views.RobotoLightTextView
            custom:style="regular"
            android:id="@+id/time_picker_hour_ones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"
            style="@style/TimePickerTimeText"
            android:singleLine="true"
            android:ellipsize="none"
            android:textColor="@color/black"/>
        
        <com.velli.tachograph.views.RobotoLightTextView
            custom:style="light"
            android:id="@+id/time_picker_hour_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TimePickerTimeText"
            android:singleLine="true"
            android:ellipsize="none"
            android:textColor="@color/black" />
        
        <com.velli.tachograph.views.RobotoLightTextView
            custom:style="custom"
            android:id="@+id/time_picker_minute_tens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            style="@style/TimePickerTimeText"
            android:singleLine="true"
            android:ellipsize="none"
            android:textColor="@color/black"/>
        
        <com.velli.tachograph.views.RobotoLightTextView
            custom:style="custom"
            android:id="@+id/time_picker_minute_ones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            style="@style/TimePickerTimeText"
            android:singleLine="true"
            android:ellipsize="none"
            android:textColor="@color/black"/>

    </LinearLayout>
    
   <ImageButton
       android:id="@+id/time_picker_delete"
       style="@style/RippleButtonBackground"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/time_picker_number_conatainer"
       android:layout_alignTop="@+id/time_picker_number_conatainer"
       android:layout_alignParentEnd="true"
       android:layout_alignParentRight="true"
       android:layout_centerVertical="true"
       android:contentDescription="@null"
       android:paddingRight="16dp"
       android:paddingLeft="16dp"
       android:src="@drawable/ic_backspace_normal_light" />

    <View
        android:id="@+id/time_picker_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/time_picker_number_conatainer"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/time_picker_keypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_picker_separator"
        android:orientation="vertical" >

        <include layout="@layout/choose_value_dialog_keypad" />
    </LinearLayout>

</com.velli.tachograph.views.TimePickerView>