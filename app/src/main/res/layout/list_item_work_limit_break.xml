<com.velli.tachograph.views.ListItemWorkLimit xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItemWorkLimit"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded" 
    card:cardUseCompatPadding="false"
    card:cardCornerRadius="2dp"
    card:cardElevation="@dimen/card_elevation" >
    
    <com.velli.tachograph.views.ExceptionTile
        android:id="@+id/work_limit_expetion_tile"
        style="@style/ExceptionCounter"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="top|right|end"
        android:alpha="0.54" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical" >

        <com.velli.tachograph.views.RobotoLightTextView
            android:id="@+id/text_work_limit_title"
            custom:style="regular"
            style="@style/WorkLimitTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start|left"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"/>

       <com.velli.tachograph.views.PieChart
           android:id="@+id/work_limit_chartView"
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:layout_marginEnd="16dp"
           android:layout_marginLeft="16dp"
           android:layout_marginRight="16dp"
           android:layout_marginStart="16dp"
           android:layout_marginTop="32dp"
           android:layout_gravity="center" />
        
        <com.velli.tachograph.views.RobotoSwitchCompat
            android:id="@+id/work_limit_switch_split_break"
            custom:style="regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="false" 
            android:textColor="#91000000"
            android:text="@string/title_split_break"/>
    </LinearLayout>

</com.velli.tachograph.views.ListItemWorkLimit>