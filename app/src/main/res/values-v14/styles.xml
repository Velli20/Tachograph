<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_primary</item>
               
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    
    <style name="ActivitySettings" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/color_primary_activity_settings</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_activity_settings</item>
        <item name="colorAccent">@color/color_accent_activity_settings</item>
               
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="ActivityAddNewEventTheme" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@color/white</item>
    </style>
    
    <style name="AppBaseThemeWhiteBackground" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ActivityRestTypeChooser" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_primary</item>
        
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>

     </style>
    
    <style name="ToolbarStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item> 
        
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="actionModeStyle">@style/ContextualStyle</item>
    </style>

    <style name="ToolbarStyleActivityFilePicker" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

        <item name="popupTheme">@style/Theme.AppCompat</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="actionModeStyle">@style/ContextualStyle</item>
    </style>
    
    <style name="ToolbarStyleDark" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/gray</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray</item> 
        <item name="actionModeStyle">@style/ContextualStyle</item>
    </style>
    
    <style name="ContextualStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/color_primary</item>
    </style>


    <style name="ListItemWorkLimit">
        <item name="android:foreground">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="TimePickerTimeText">
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">0.54</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Subtitle.ActivityAddNewEvent" parent="@style/Subtitle">
        <item name="android:textColor">#90000000</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:alpha">1</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:drawablePadding">32dp</item>
    </style>


    <style name="Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">0.87</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Title.ActivityAddNewEvent" parent="@style/Title">
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="Title.ListItemLogSummary" parent="@style/Title">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="Title.ListItemDaySummary" >
        <item name="android:textSize">14sp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="Title.ListItemDayStepper" parent="@style/Title">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="Title.ListItemLogChild">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">0.87</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerVertical">false</item>
    </style>

    <style name="Title.Time" parent="@style/Title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ActivityAddNewEventButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:focusable">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    
    <style name="ActivityChooserButton" parent="@style/RippleButtonBackground">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ListPrimaryText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">0.87</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ListSecondaryText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">0.54</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ListSecondaryText.ListItemDaySummary" parent="@style/ListSecondaryText">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="ListSecondaryText.ListItemWeekSummary" parent="@style/ListSecondaryText">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="ListSecondaryText.ListItemLogChild" parent="@style/ListSecondaryText" >
        <item name="android:layout_centerVertical">false</item>
    </style>

    <style name="ActivityEventDetailsText" >
        <item name="android:textColor">#DE000000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:drawablePadding">32dp</item>
    </style>

    <style name="ListItemRegulationTitle" parent="@style/ListPrimaryText">
        <item name="android:textSize">22sp</item>
        <item name="android:singleLine">false</item>
    </style>
    
    <style name="ListPrimaryTextWhite" parent="@style/ListPrimaryText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:alpha">1</item>
    </style>
    
    <style name="ListSecondaryTextWhite" parent="@style/ListSecondaryText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:alpha">0.70</item>
    </style>
    
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#000000</item>
        <item name="android:alpha">0.12</item>
    </style>

    <style name="Divider.ActivityAddNewEvent" parent="@style/Divider">
        <item name="android:layout_marginLeft">72dp</item>
    </style>

    <style name="EventFab">
        <item name="android:layout_gravity">bottom|right|end</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="ExceptionCounter">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center_vertical|right|end</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    
    <style name="RippleButtonBackground">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TooltipTitle" >
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="TooltipSubtitle">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#33000000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

</resources>
