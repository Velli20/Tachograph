<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        
        <com.velli.tachograph.preferences.CustomPreferenceCategory 
            android:title="@string/preference_category_general" >
            
            <com.velli.tachograph.preferences.CustomListPreference 
                android:title="@string/preference_title_count_activity_progress" 
                android:entries="@array/prefrence_entries_count_activity_progress"
                android:entryValues="@array/prefrence_entry_values_count_activity_progress" 
                android:defaultValue="0" 
                android:key="@string/preference_key_count_activity_progress" 
                android:summary="%s"/>

            <com.velli.tachograph.preferences.CustomCheckBoxPreference
                android:defaultValue="false"
                android:key="@string/preference_key_switch_automatically_to_drive"
                android:title="@string/preference_title_switch_automatically_to_drive"
                android:summary="@string/preference_summary_switch_automatically_to_drive"/>
            
        </com.velli.tachograph.preferences.CustomPreferenceCategory>
        
        <com.velli.tachograph.preferences.CustomPreferenceCategory 
            android:title="@string/preference_category_notifications" >
            
            <com.velli.tachograph.preferences.CustomCheckBoxPreference
                android:defaultValue="true"
                android:key="@string/preference_key_show_notifications"
                android:title="@string/preference_title_show_notifications" />
            
            <com.velli.tachograph.preferences.CustomCheckBoxPreference
                android:defaultValue="true"
                android:key="@string/preference_key_notification_vibrate"
                android:title="@string/preference_title_notification_vibrate" />
            
            <com.velli.tachograph.preferences.CustomRingtonePreference
                android:ringtoneType="notification"
                android:showDefault="true" 
                android:defaultValue="content://settings/system/notification_sound"
                android:key="@string/preference_key_notification_sound"
                android:title="@string/preference_title_notification_sound"/>
            
            <com.velli.tachograph.preferences.WorkLimitAlarmPrefenrece
                android:defaultValue="30"
                android:key="@string/preference_key_alarm_drive_time_ending"
                android:title="@string/preference_title_alarm_drive_time_ending" />
            
            <com.velli.tachograph.preferences.WorkLimitAlarmPrefenrece
                android:defaultValue="10"
                android:key="@string/preference_key_alarm_break_time_ending"
                android:title="@string/preference_title_alarm_break_time_ending" />
            
            <com.velli.tachograph.preferences.WorkLimitAlarmPrefenrece
                android:defaultValue="60"
                android:key="@string/preference_key_alarm_daily_rest_ending"
                android:title="@string/preference_title_alarm_daily_rest_ending" />
            
            <com.velli.tachograph.preferences.WorkLimitAlarmPrefenrece
                android:defaultValue="150"
                android:key="@string/preference_key_alarm_weekly_rest_ending"
                android:title="@string/preference_title_alarm_weekly_rest_ending" />
            
            

        </com.velli.tachograph.preferences.CustomPreferenceCategory>
        
        <com.velli.tachograph.preferences.CustomPreferenceCategory 
            android:title="@string/preference_category_log">
            
            <com.velli.tachograph.preferences.CustomPreference
                android:key="@string/preference_key_remove_all_logs"
                android:title="@string/preference_title_remove_all_logs" />
            
            
            <com.velli.tachograph.preferences.CustomListPreference 
                android:title="@string/preference_title_sort_by" 
                android:entries="@array/prefrence_entries_sort_by_month_week_day"
                android:entryValues="@array/prefrence_entry_values_sort_by_month_week_day" 
                android:defaultValue="2" 
                android:key="@string/preference_key_log_order_day_week_month" 
                android:summary="%s"/>

           
            <com.velli.tachograph.preferences.CustomCheckBoxPreference 
                android:key="@string/preference_key_remove_under_1_min_logs" 
                android:defaultValue="true" 
                android:summary="@string/preference_summary_remove_less_1_min_entries" 
                android:title="@string/preference_title_remove_less_1_min_entries"/>
        </com.velli.tachograph.preferences.CustomPreferenceCategory>
        
        <com.velli.tachograph.preferences.CustomPreferenceCategory 
            android:title="@string/preference_title_backup_restore">
            
            <com.velli.tachograph.preferences.CustomPreference
                android:key="@string/preference_key_backup"
                android:title="@string/preference_title_backup" />
            <com.velli.tachograph.preferences.CustomPreference
                android:key="@string/preference_key_restore"
                android:title="@string/preference_title_restore" />
            
             <com.velli.tachograph.preferences.CustomPreference 
                android:title="@string/preference_title_export" 
                android:key="@string/preference_key_export" 
                android:summary="@string/preference_summary_export"/>
        </com.velli.tachograph.preferences.CustomPreferenceCategory>
        
        <com.velli.tachograph.preferences.CustomPreferenceCategory 
            android:title="@string/preference_category_gps_settings">
            
            <com.velli.tachograph.preferences.CustomCheckBoxPreference 
                android:key="@string/preference_key_use_gps" 
                android:defaultValue="false" 
                android:title="@string/preference_title_use_gps" 
                android:summary="@string/preference_summary_use_gps"/>
            <com.velli.tachograph.preferences.CustomCounterPreference 
                android:key="@string/preference_key_threshold_value" 
                android:title="@string/preference_title_threshold_value" 
                android:defaultValue="14" 
                android:summary="@string/preference_summary_threshold_value"/>
            
            <com.velli.tachograph.preferences.CustomTimePickerPreference 
                android:key="@string/preference_key_threshold_time" 
                android:title="@string/preference_title_threshold_time" 
                android:defaultValue="120" 
                android:summary="@string/preference_summary_threshold_time"/>
            
            <com.velli.tachograph.preferences.GpsAccuracyPreference 
                android:key="@string/preference_key_gps_min_accuracy" 
                android:title="@string/preference_title_gps_min_accuracy" 
                android:defaultValue="1" 
                android:summary="@string/preference_summary_gps_min_accuracy"/>
            
        </com.velli.tachograph.preferences.CustomPreferenceCategory>
        
        
    </PreferenceScreen>
